{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: clang++ build active file",
            "command": "/usr/bin/clang++",
            "args": [
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                //"-g", // set for exclude debugging info
                "${file}",
                "${fileDirname}/stretcher.cpp",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.out",
                "-I${fileDirname}",
                "-I${workspaceFolder}/../rubberband",
                "-I/opt/homebrew/include",
                // "-L${workspaceFolder}/../rubberband/build", //set for using own built binaries
                "-L/opt/homebrew/lib",
                "-lportaudio",
                "-lrubberband",
                "-lsndfile",
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}