{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "brew g++ debug",
            "type": "cppdbg",
            "request": "launch",
            "targetArchitecture": "arm64",
            //"program": "${fileDirname}/${fileBasenameNoExtension}.out",
            "program": "${workspaceFolder}/pitch-shifting/main.out",
            "args": [
                "--pitch=9",
                "--fine",
                "--formant=4",
                "--realtime",
                "--smoothing",
                "--ignore-clipping",
                "--gui",
                "2", // input dev index
                "1" // output dev index
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/pitch-shifting", // ensure correct cwd to load font file
            "environment": [],
            "externalConsole": false, // set for ncurses to get user input from console
            "MIMode": "lldb",
            "miDebuggerArgs": "--arch=arm64",
            "preLaunchTask": "C/C++: brew g++ build all cpp"
        },
    ]
}